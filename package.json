    "rollup": "^2.76.0",
    "rollup-plugin-prettier": "^2.2.2",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "extends": "xt"
